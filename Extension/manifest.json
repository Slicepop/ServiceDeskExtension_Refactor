{
  "manifest_version": 3,
  "name": "Service Desk Upgrade V2",
  "version": "1.0.0",
  "permissions": ["activeTab", "offscreen", "storage"],
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": "images/favicon.png",
    "default_popup": "popup/popup.html"
  },

  "host_permissions": ["https://support.wmed.edu/*"],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "images/favicon.ico"],
      "matches": ["https://support.wmed.edu/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://support.wmed.edu/LiveTime/WebObjects/*"],
      "js": ["functions.js", "main.js"],
      "css": ["styles.css"],
      "type": "module",
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://support.wmed.edu/LiveTime/WebObjects/LiveTime.woa/wa/LookupRequest?*"
      ],
      "js": ["openedRequest.js"],
      "css": ["styles.css"],
      "type": "module",
      "run_at": "document_idle"
    }
  ]
}
